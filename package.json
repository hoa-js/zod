{
  "name": "@hoajs/zod",
  "version": "0.1.0",
  "description": "Zod validator middleware for Hoa.",
  "main": "./dist/cjs/zod.js",
  "type": "module",
  "module": "./dist/esm/zod.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/esm/zod.js",
      "require": "./dist/cjs/zod.js",
      "default": "./dist/esm/zod.js"
    }
  },
  "files": [
    "dist",
    "types",
    "CHANGELOG.md"
  ],
  "scripts": {
    "lint": "eslint .",
    "build": "tsup",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepare": "husky"
  },
  "author": "nswbmw",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hoa-js/zod.git"
  },
  "keywords": [
    "hoa",
    "middleware",
    "zod",
    "validator"
  ],
  "devDependencies": {
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "eslint": "9.37.0",
    "globals": "16.4.0",
    "hoa": "*",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "neostandard": "0.12.2",
    "tsup": "8.5.0",
    "zod": "^4"
  },
  "peerDependencies": {
    "hoa": "*",
    "zod": "^4"
  },
  "engines": {
    "node": ">=20"
  }
}
